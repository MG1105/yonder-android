<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <LinearLayout   android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_channel_vote_layout"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/textView_channel_name" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/item_channel_vote_layout"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_record"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="22dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/item_channel_vote_layout"
                android:textSize="12dp"
                android:text="react"
                android:id="@+id/textView_channel_reply" />

            <Space
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/item_channel_vote_layout"
                android:layout_alignParentBottom="true"
                android:id="@+id/item_channel_load_space"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/item_channel_load_space"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_play"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/item_channel_load_space"
                android:paddingBottom="2dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="22dp"
                android:textSize="12dp"
                android:text="load"
                android:id="@+id/textView_channel_load" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_channel_vote_layout"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="2 new"
                android:id="@+id/textView_channel_new" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/item_channel_left_space"
                android:paddingRight="20dp"
                android:gravity="center"
                android:id="@+id/item_channel_vote_layout"
                android:orientation="vertical">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_up"
                    android:id="@+id/button_channel_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="100"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:id="@+id/textView_channel_item_rating" />

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_down"
                    android:id="@+id/button_channel_dislike" />

            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:id="@+id/item_channel_left_space"/>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    </android.support.v7.widget.CardView>
