<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_channel_thumbnail"
            android:layout_toLeftOf="@+id/item_channel_vote_layout"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/textView_channel_name" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/ic_record"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="22dp"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            android:text="react"
            android:visibility="gone"
            android:id="@+id/textView_channel_reply" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/ic_play"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="22dp"
            android:textSize="12dp"
            android:text="load"
            android:visibility="gone"
            android:id="@+id/textView_channel_load" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="2 new"
            android:id="@+id/textView_channel_new" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/item_channel_vote_layout"
            android:orientation="vertical">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_up"
                android:id="@+id/button_channel_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="100"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:id="@+id/textView_channel_item_rating" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_down"
                android:id="@+id/button_channel_dislike" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/item_channel_thumbnail"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageView_channel_item"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="#33FF5722"
                android:id="@+id/imageView_channel_item_overlay"/>

            <ProgressBar
                android:id="@+id/progress_channel_thumbnail"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>

            <ProgressBar
                android:id="@+id/progress_channel_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:text="100"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/textView_channel_item_ranking" />

        </FrameLayout>

    </RelativeLayout>

    </android.support.v7.widget.CardView>
