<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout_login">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_vidici"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView_create_profile"
            android:textColor="@color/primary_text"
            android:layout_centerInParent="true"
            android:text="Create a profile to continue"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="200dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_create_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_lock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:id="@+id/textView_privacy"
                android:textColor="@color/secondary_text"
                android:text="We will never post to Facebook"/>

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_textview_username"
        android:layout_centerInParent="true"
        android:hint="Claim a username"
        android:visibility="invisible"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_login_textview_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="OK"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        android:background="@drawable/oval"
        android:id="@+id/fragment_login_button_username"/>

</RelativeLayout>
