<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yonder.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/owl"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FeedActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_feed"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CameraPreviewActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CapturedVideoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_captured_video"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:parentActivityName=".CameraPreviewActivity">
        </activity>
        <activity
            android:name=".LoadFeedActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_load_feed"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CommentActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/title_activity_comment"
            android:parentActivityName=".FeedActivity">
        </activity>
    </application>

</manifest>
